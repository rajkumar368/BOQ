<odoo>
    <template id="boq_homepage" name="BOQ Home Page">
        <html>
            <head>
                <meta charset="utf-8"/>
                <link rel="stylesheet" href="/BOQ/static/src/css/home.css"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
            </head>

            <body>
                <section id="boq-home-section"
                         style="background-image: url('/BOQ/static/src/img/login-bg.jpg');
                                background-size: cover;
                                background-position: center;
                                min-height: 100vh;
                                max-width:100%;
                                position: relative;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                color: white;">

                    <!-- Overlay for dark shade -->
                    <div class="overlay"></div>

                    <!-- Content -->
                    <div class="boq-container text-center">
                        <h1 class="boq-title">
                            Welcome to BOQ Management Portal
                        </h1>
                        <p class="boq-subtitle">
                            Choose your login type below
                        </p>

                        <div class="boq-button-group">
                            <a href="/cboq/login" class="boq-btn cboq">CBOQ Login</a>
                            <a href="/sboq/login" class="boq-btn sboq">SBOQ Login</a>
                            <a href="/admin/login" class="boq-btn admin">Admin Login</a>
                        </div>
                    </div>
                </section>
            </body>
        </html>
    </template>
</odoo>
